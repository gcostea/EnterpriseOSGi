<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ProductOnePU" transaction-type="RESOURCE_LOCAL">
    <jta-data-source>jdbc/sample</jta-data-source>
    <class>com.productone.entities.Customer</class>
    <class>com.productone.entities.DiscountCode</class>
    <class>com.productone.entities.Manufacturer</class>
    <class>com.productone.entities.MicroMarket</class>
    <class>com.productone.entities.Product</class>
    <class>com.productone.entities.ProductCode</class>
    <class>com.productone.entities.PurchaseOrder</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
  </persistence-unit>
</persistence>
